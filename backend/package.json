{
  "name": "bigdeal-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon --exec ts-node src/server.ts",
    "server": "nodemon --exec ts-node src/server.ts",
    "admin": "cd ../admin-panel && npm run dev",
    "frontend": "cd ../frontend && npm run dev",
    "dev-all": "concurrently \"npm run dev\" \"npm run admin\" \"npm run frontend\"",
    "build": "tsc",
    "seed": "ts-node src/db/seed-products.ts",
    "migrate:make": "knex migrate:make",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "setup-db": "ts-node src/db/setup-database.ts",
    "seed-orders": "ts-node src/db/seed-orders.ts",
    "seed-payments": "ts-node src/db/seed-payments.ts",
    "knex": "knex --knexfile src/db/knexfile.ts",
    "mega-menu-migration": "node src/scripts/megaMenuMigration.js",
    "mega-menu-subcollections": "node src/scripts/run-mega-menu-migrations.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Backend API for BigDeal E-commerce platform",
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "@types/express": "^4.17.21",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "faker": "^6.6.6",
    "firebase-admin": "^13.2.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.2",
    "pg": "^8.14.1",
    "razorpay": "^2.9.6",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.14",
    "@types/pg": "^8.11.11",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
